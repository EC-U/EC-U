.poster{
  margin-bottom: 0px;
  width:100%;
  height:120px;
}
.nav{
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  text-align: center;
  background-color: #ffffff
}
.nav-item{
  width: 33.3%;
  font-size:15px; 
}
.select{
  font-size: 14px;
  font-weight: bold;
}
.normal{
  font-size: 14px;
}
.hr1{
  height: 10px;
  background-color: #cccccc;
  margin-top: 10px;
  opacity: 0.2;
}
.item{
  margin:10px;
  
}
.title{
  color: #444444;
  font-weight: bold;
  font-size: 16px;
}
.pic image{
  margin-right: 0px;
}
.introduction{
  font-size: 10px;
}
.info{
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999999;
}
.desc{
  width:90%;
}
.desc text{
  margin-right: 10px;
}
.opr{
  width:10%;
}
.opr view{
  width:17px;
  height: 12px;
  border:1px solid #cccccc;
  line-height: 10px;
  text-align: center;
  border-radius: 5px;
}
.hr2{
  border:1px solid #cccccc;
  opacity: 0.2;
  margin-top:10px;
}

.item2{
  display: flex;
  flex-direction: column;
}
.title2{
  color: #444444;
  font-weight: bold;
  font-size: 16px;
}
.pic2{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.introduction2{
  margin-left: 5px;
  font-size: 12px;
  align-items: center;
}
